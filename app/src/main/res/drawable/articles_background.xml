<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background Image -->
    <item>
        <bitmap
            android:src="@drawable/articles_bg"
            android:gravity="center" />
    </item>

    <!-- Gradient Overlay -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#94D7C9FF"
            android:endColor="#37E6E6FA"
            android:angle="315"/>
        </shape>
    </item>

</layer-list>
