<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- Vertical layout for top bar + fragment container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Top user info -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:background="@color/light_lavender">

            <ImageButton
                android:id="@+id/btn_profile"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/round_button_bg"
                android:padding="8dp"
                android:layout_marginEnd="10dp"
                android:src="@drawable/ic_profile"
                app:tint="@color/lighter_lavender"
                android:scaleType="centerInside"
                android:contentDescription="Take Scan"/>

            <TextView
                android:id="@+id/user_details"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/user_email"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginEnd="10dp"
                android:textColor="@color/purple_700" />

            <Button
                android:id="@+id/btn_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Info" />
        </LinearLayout>

        <!-- Fragment container -->
        <FrameLayout
            android:id="@+id/fragment_container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />
    </LinearLayout>

    <!-- BottomAppBar -->
    <com.google.android.material.bottomappbar.BottomAppBar
        android:id="@+id/bottomAppBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:backgroundTint="@color/white"
        app:fabCradleMargin="10dp"
        app:fabCradleRoundedCornerRadius="28dp"
        app:fabCradleVerticalOffset="10dp"
        app:hideOnScroll="false"
        app:fabAlignmentMode="center"
        app:itemRippleColor="@android:color/transparent"
        app:itemBackground="@android:color/transparent" />

    <!-- BottomNavigationView above BottomAppBar z-order -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="76dp"
        android:layout_marginHorizontal="10dp"
        android:layout_gravity="bottom"
        android:background="@android:color/transparent"
        android:translationZ="1dp"
        app:menu="@menu/bottom_nav_menu"
        app:itemRippleColor="@android:color/transparent"
        app:itemBackground="@android:color/transparent" />

    <!-- Floating Action Button (on top of everything) -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:elevation="12dp"
        app:layout_anchor="@id/bottomAppBar"
        app:layout_anchorGravity="center"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="0dp"
        android:src="@drawable/ic_add_photo"
        app:fabCustomSize="65dp"
        android:contentDescription="@string/app_name"
        app:backgroundTint="@color/light_lavender"
        app:shapeAppearanceOverlay="@style/ShapeAppearance.Fab.Circle" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
