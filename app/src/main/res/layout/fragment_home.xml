<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="90dp"
    android:fillViewport="true">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:gravity="center_horizontal">

        <!-- 1. Take a Scan Section -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            android:backgroundTint="@color/lighter_lavender">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="How is your plant's health today?"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:gravity="center"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Take a scan!"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:paddingTop="4dp"
                    android:paddingBottom="12dp"/>

                <ImageButton
                    android:id="@+id/btnTakeScan"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/round_button_bg"
                    android:padding="8dp"
                    android:src="@drawable/ic_add_photo"
                    android:scaleType="centerInside"
                    android:contentDescription="Take Scan"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- 2. Explore Articles Section -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardArticles"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:strokeColor="@color/lighter_lavender"
            app:strokeWidth="4dp"
            android:foreground="?attr/selectableItemBackground">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/articles_background"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Explore Articles"
                    android:textSize="28sp"
                    android:paddingEnd="90dp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:layout_gravity="center"/>
            </FrameLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- 3. Navigation Grid -->
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="3"
            android:useDefaultMargins="true"
            android:layout_marginBottom="16dp">

            <!-- Scan -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_scan"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:foreground="?attr/selectableItemBackground"
                app:cardBackgroundColor="@color/lighter_lavender"
                app:strokeColor="@color/lavender"
                app:strokeWidth="2dp"
                app:cardCornerRadius="12dp"
                android:padding="12dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/ic_add_photo"
                        app:tint="@color/purple_500"
                        android:contentDescription="Scan"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Scan"
                        android:textColor="@color/purple_500"
                        android:textSize="14sp"
                        android:paddingTop="2dp"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Catalogue -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_catalogue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:foreground="?attr/selectableItemBackground"
                app:cardBackgroundColor="@color/lighter_lavender"
                app:strokeColor="@color/lavender"
                app:strokeWidth="2dp"
                app:cardCornerRadius="12dp"
                android:padding="12dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/ic_search"
                        app:tint="@color/purple_500"
                        android:contentDescription="Catalogue"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Catalogue"
                        android:textColor="@color/purple_500"
                        android:textSize="14sp"
                        android:paddingTop="2dp"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Forums -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_forums"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:foreground="?attr/selectableItemBackground"
                app:cardBackgroundColor="@color/lighter_lavender"
                app:strokeColor="@color/lavender"
                app:strokeWidth="2dp"
                app:cardCornerRadius="12dp"
                android:padding="12dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/ic_forum"
                        app:tint="@color/purple_500"
                        android:contentDescription="Forums"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Forums"
                        android:textColor="@color/purple_500"
                        android:textSize="14sp"
                        android:paddingTop="2dp"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Info -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_info"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:foreground="?attr/selectableItemBackground"
                app:cardBackgroundColor="@color/lighter_lavender"
                app:strokeColor="@color/lavender"
                app:strokeWidth="2dp"
                app:cardCornerRadius="12dp"
                android:padding="12dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/ic_info"
                        app:tint="@color/purple_500"
                        android:contentDescription="Info"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Info"
                        android:textColor="@color/purple_500"
                        android:textSize="14sp"
                        android:paddingTop="2dp"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Map -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_map"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:foreground="?attr/selectableItemBackground"
                app:cardBackgroundColor="@color/lighter_lavender"
                app:strokeColor="@color/lavender"
                app:strokeWidth="2dp"
                app:cardCornerRadius="12dp"
                android:padding="12dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/ic_map"
                        app:tint="@color/purple_500"
                        android:contentDescription="Map"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Map"
                        android:textColor="@color/purple_500"
                        android:textSize="14sp"
                        android:paddingTop="2dp"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Articles -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_articles"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:foreground="?attr/selectableItemBackground"
                app:cardBackgroundColor="@color/lighter_lavender"
                app:strokeColor="@color/lavender"
                app:strokeWidth="2dp"
                app:cardCornerRadius="12dp"
                android:padding="12dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/ic_articles"
                        app:tint="@color/purple_500"
                        android:contentDescription="Articles"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Articles"
                        android:textColor="@color/purple_500"
                        android:textSize="14sp"
                        android:paddingTop="2dp"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </GridLayout>

        <!-- 4. Admin Login -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_admin_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            android:backgroundTint="@color/lighter_lavender">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Admin Login"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/purple_500"
                    android:gravity="center"
                    android:paddingVertical="4dp"/>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
</ScrollView>
