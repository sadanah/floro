<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Title -->
        <TextView
            android:id="@+id/tv_title"
            android:textStyle="bold"
            android:textSize="22sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Disease Name" />

        <!-- Confidence -->
        <TextView
            android:id="@+id/tv_confidence"
            android:layout_marginTop="4dp"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Confidence: 00.0%" />

        <!-- Plant -->
        <TextView
            android:id="@+id/tv_plant"
            android:layout_marginTop="12dp"
            android:textStyle="bold"
            android:text="Plant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!-- Disease type -->
        <TextView
            android:id="@+id/tv_type"
            android:layout_marginTop="8dp"
            android:text="Type: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!-- Description -->
        <TextView
            android:id="@+id/tv_description_header"
            android:layout_marginTop="16dp"
            android:textStyle="bold"
            android:text="Description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_description"
            android:layout_marginTop="4dp"
            android:text="â€”"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Treatment -->
        <TextView
            android:id="@+id/tv_treatment_header"
            android:layout_marginTop="16dp"
            android:textStyle="bold"
            android:text="Recommended treatment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:id="@+id/treatment_container"
            android:orientation="vertical"
            android:layout_marginTop="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <!-- Products -->
        <TextView
            android:id="@+id/tv_products_header"
            android:layout_marginTop="16dp"
            android:textStyle="bold"
            android:text="Suggested products"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:id="@+id/products_container"
            android:orientation="vertical"
            android:layout_marginTop="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>
</ScrollView>
