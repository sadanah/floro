<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Custom rounded input box style -->
    <style name="RoundedTextInput" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundMode">outline</item>
        <item name="boxStrokeColor">@color/lavender</item>
        <item name="boxCornerRadiusTopStart">50dp</item>
        <item name="boxCornerRadiusTopEnd">50dp</item>
        <item name="boxCornerRadiusBottomStart">50dp</item>
        <item name="boxCornerRadiusBottomEnd">50dp</item>
    </style>


    <style name="CustomButton" parent="Widget.Material3.Button">
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">25dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/teal_200</item>
    </style>




</resources>
